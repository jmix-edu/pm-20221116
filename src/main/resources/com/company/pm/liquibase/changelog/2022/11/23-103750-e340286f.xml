<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="pm-20221116">
        <createTable tableName="TAG">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_TAG"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="pm-20221116">
        <createTable tableName="TASK_TAG_LINK">
            <column name="TAG_ID" type="INT">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_TASK_TAG_LINK"/>
            </column>
            <column name="TASK_ID" type="INT">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_TASK_TAG_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="pm-20221116">
        <addForeignKeyConstraint baseColumnNames="TAG_ID"
                                 baseTableName="TASK_TAG_LINK"
                                 constraintName="FK_TASTAG_ON_TAG"
                                 referencedColumnNames="ID"
                                 referencedTableName="TAG"/>
    </changeSet>
    <changeSet id="4" author="pm-20221116">
        <addForeignKeyConstraint baseColumnNames="TASK_ID"
                                 baseTableName="TASK_TAG_LINK"
                                 constraintName="FK_TASTAG_ON_TASK"
                                 referencedColumnNames="ID"
                                 referencedTableName="TASK_"/>
    </changeSet>
</databaseChangeLog>