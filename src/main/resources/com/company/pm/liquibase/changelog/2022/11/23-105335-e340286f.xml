<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="pm-20221116">
        <createTable tableName="PROJECT_BUDGET">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_PROJECT_BUDGET"/>
            </column>
            <column name="INITIAL_BUDGET" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="SPENT_BUDGET" type="DECIMAL(19, 2)"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="pm-20221116">
        <addColumn tableName="PROJECT">
            <column name="BUDGET_ID" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="pm-20221116">
        <createIndex indexName="IDX_PROJECT_BUDGET" tableName="PROJECT">
            <column name="BUDGET_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="BUDGET_ID"
                                 baseTableName="PROJECT"
                                 constraintName="FK_PROJECT_ON_BUDGET"
                                 referencedColumnNames="ID"
                                 referencedTableName="PROJECT_BUDGET"/>
    </changeSet>
</databaseChangeLog>