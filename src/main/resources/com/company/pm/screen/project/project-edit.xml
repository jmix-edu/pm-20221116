<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        caption="msg://projectEdit.caption"
        focusComponent="form">
    <data>
        <instance id="projectDc"
                  class="com.company.pm.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
                <property name="tasks" fetchPlan="_base">
                    <property name="assignee" fetchPlan="_base"/>
                </property>
                <property name="budget" fetchPlan="_base"/>
                <property name="category" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="projectDl" dynamicAttributes="true"/>
            <collection id="tasksDc" property="tasks"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
        <dynattr:dynamicAttributes/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="projectDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>
                <entityPicker id="managerField" property="manager">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <textField id="budgetPlanned" property="budget.initialBudget"/>
                <textField id="budgetSpent" property="budget.spentBudget"/>
                <textField id="projectLabelsField" property="projectLabels"/>
<!--                <textArea id="descrTextArea" property="+ProjectCategoryBackendDescription"/>-->
                <dynattr:dynamicAttributesPanel id="dynamicAttributesPanel"
                                                dataContainer="projectDc"
                                                width="100%"/>
            </column>
        </form>
        <groupBox id="tasksBox"
                  caption="msg://com.company.pm.entity/Project.tasks">
            <table id="tasksTable" dataContainer="tasksDc" width="100%"
                   height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="hoursSpent"/>
                    <column id="assignee"/>
                </columns>
                <buttonsPanel>
                    <button action="tasksTable.create"/>
                    <button action="tasksTable.edit"/>
                    <button action="tasksTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
            />
            <button id="closeBtn" action="windowClose"/>
            <button id="saveUsingService" caption="msg://save.with.service"
                    icon="FLOPPY_O"/>
            <button id="validateDate" caption="msg://validate.project.data"
                    icon="CHECK_CIRCLE"/>
        </hbox>
    </layout>
</window>
