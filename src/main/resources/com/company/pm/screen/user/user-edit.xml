<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://UserEdit.caption"
        focusComponent="form">
    <data>
        <instance id="userDc"
                  class="com.company.pm.entity.User">
            <fetchPlan extends="_base">
                <property name="address" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="windowCommitAndClose"
                caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="userDc">
            <column width="350px">
                <textField id="usernameField" property="username"
                           editable="false"/>
                <passwordField id="passwordField"
                               caption="msg://com.company.pm.entity/User.password"
                               required="true"
                               visible="false"/>
                <passwordField id="confirmPasswordField"
                               caption="msg://confirmPassword"
                               required="true"
                               visible="false"/>
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <textField id="emailField" property="email"/>
                <textField id="addressZipField" property="address.zip"/>
                <textField id="addressStreetField" property="address.street"/>
                <comboBox id="timeZoneField" property="timeZoneId"/>
                <checkBox id="activeField" property="active"/>
                <button id="reportBtn" caption="Print Report"/>
            </column>
            <column width="200px">
                <image id="avatar" width="100%" height="300px" property="avatar"
                       scaleMode="CONTAIN"/>
                <fileUpload property="avatar" caption="msg://upload.avatar"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
