<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://projectSnapshotBrowse.caption">
    <data>
        <collection id="projectsDc" class="com.company.pm.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
                <property name="tasks" fetchPlan="_base"/>
                <property name="budget" fetchPlan="_base"/>
                <property name="category" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="projectsDl">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="splitter">
        <split id="splitter" width="100%" orientation="vertical">
            <table id="projectsTable" height="100%" width="100%"
                   dataContainer="projectsDc">
                <actions>
                    <action id="refresh" type="refresh"/>
                </actions>
                <buttonsPanel alwaysVisible="true">
                    <button id="projectsTableRefreshBtn"
                            action="projectsTable.refresh"/>
                </buttonsPanel>
                <columns>
                    <column id="name"/>
                    <column id="startDate"/>
                    <column id="endDate"/>
                    <column id="manager"/>
                    <column id="budget"/>
                    <column id="projectLabels"/>
                    <column id="category"/>
                    <column id="archived"/>
                </columns>
            </table>
            <fragment id="snapshotDiff"
                      screen="snapshotDiff"
                      width="100%"
                      height="100%"/>
        </split>
    </layout>
</window>