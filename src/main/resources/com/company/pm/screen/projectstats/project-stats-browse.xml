<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://projectStatsBrowse.caption"
        focusComponent="projectsTabSheet">
    <data readOnly="true">
        <collection id="projectStatsesDc"
                    class="com.company.pm.dtos.ProjectStats">
            <loader id="projectStatsesDl"/>
        </collection>
        <collection id="projectsDc" class="com.company.pm.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectsDl">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="projectsTabSheet" spacing="true">
        <buttonsPanel>
            <button id="showProjectEndDate" caption="Show End Date" icon="CALENDAR"/>
            <button id="budgetReportBtn" caption="Budget Report" icon="DOLLAR"/>
            <button id="reportInBgd" caption="Run and Save" icon="SAVE"/>
        </buttonsPanel>
        <tabSheet id="projectsTabSheet" width="100%">
            <tab id="projects" caption="Projects" lazy="true">
                <groupTable id="projectsTable" dataContainer="projectsDc" width="100%">
                    <columns>
                        <column id="id"/>
                        <column id="name"/>
                        <column id="startDate"/>
                        <column id="endDate"/>
                        <column id="projectLabels"/>
                        <column id="archived"/>
                    </columns>
                </groupTable>
            </tab>
            <tab id="stats" caption="Statistics" lazy="true">
                <groupTable id="projectStatsesTable"
                            width="100%"
                            dataContainer="projectStatsesDc">
                    <columns>
                        <column id="id"/>
                        <column id="name"/>
                        <column id="startDate"/>
                        <column id="tasksCount"/>
                        <column id="hoursPlanned"/>
                        <column id="hoursSpent"/>
                    </columns>
                    <simplePagination/>
                </groupTable>
            </tab>
        </tabSheet>
    </layout>
</window>