<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://userInfoBrowse.caption"
        focusComponent="userInfoesTable">
    <data readOnly="true">
        <collection id="userInfoesDc"
                    class="com.company.pm.entity.UserInfo">
            <fetchPlan extends="_base"/>
            <loader id="userInfoesDl">
                <query>
                    <![CDATA[select e from UserInfo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="userInfoesTable" spacing="true">
        <filter id="filter"
                dataLoader="userInfoesDl">
            <properties include=".*"/>
        </filter>
        <table id="userInfoesTable"
               width="100%"
               dataContainer="userInfoesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fullName"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="userInfoesTable.create"/>
                <button id="editBtn" action="userInfoesTable.edit"/>
                <button id="removeBtn" action="userInfoesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
