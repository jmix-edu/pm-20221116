<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://subtaskBrowse.caption"
        focusComponent="subtasksTable">
    <data readOnly="true">
        <collection id="subtasksDc"
                    class="com.company.pm.entity.Subtask">
            <fetchPlan extends="_base">
                <property name="assignee" fetchPlan="_base"/>
                <property name="task" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="subtasksDl">
                <query>
                    <![CDATA[select e from Subtask e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="subtasksTable" spacing="true">
        <filter id="filter"
                dataLoader="subtasksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="subtasksTable"
                    width="100%"
                    dataContainer="subtasksDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="assignee"/>
                <column id="task"/>
                <column id="startDate"/>
                <column id="finishDate"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="subtasksTable.create"/>
                <button id="editBtn" action="subtasksTable.edit"/>
                <button id="removeBtn" action="subtasksTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
